[Unit]
Description=Proxmox Game Deployer
After=network.target

[Service]
Type=simple
User=proxmox
Group=proxmox
WorkingDirectory=/opt/proxmox-game-deployer
ExecStart=/usr/local/bin/proxmox-game-deployer
Restart=on-failure
Environment=APP_LISTEN_ADDR=:5298
Environment=APP_DB_PATH=/opt/proxmox-game-deployer/data/app.db

[Install]
WantedBy=multi-user.target

